@model IEnumerable<MyClass.Models.Supplier>

@{
    ViewBag.Title = "Thùng rác Nhà cung cấp";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header {
    <link href="~/Public/css/cdn.datatables.net_1.13.6_css_jquery.dataTables.min.css" rel="stylesheet" />
}

@section footer {
    <script src="~/Public/js/cdn.datatables.net_1.13.6_js_jquery.dataTables.min.js"></script>
    <script>let table = new DataTable('#myTable');</script>
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">THÙNG RÁC DANH MỤC NHÀ CUNG CẤP</strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Index","Supplier")" class="btn-sm btn-info"> <i class="fa fa-long-arrow-alt-left"></i> Quay lại</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.Partial("Message")
                <table class="table table-bordered table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th class="text-center" style="width: 20px;"># </th>
                            <th>Tên nhà cung cấp</th>
                            <th>Slug</th>
                            <th style="width:50px">Hình</th>
                            <th>Điện thoại </th>
                            <th>Email </th>
                            <th>Ngày tạo</th>
                            <th class="text-center" style="width: 180px" ;>Chức năng </th>
                            <th>Id</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td><input type="checkbox" name="checkId" value="" /></td>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Slug)</td>
                            <td>
                                <img src="~/Public/images/suppliers/@item.Img" alt="Img" class="img-fluid" />
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>

                            <td class="text-center">
                                <a href="@Url.Action("Recover","Supplier", new { id = item.Id })" class="btn-sm btn-info"> <i class="fa fa-undo"></i></a>
                                <a href="@Url.Action("Delete","Supplier", new { id = item.Id })" class="btn-sm btn-danger"> <i class="fa fa-trash"></i></a>

                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                        </tr>
                        }
                    </tbody>

                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

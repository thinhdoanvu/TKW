@model IEnumerable<MyClass.Models.Link>

@{
    ViewBag.Title = "Danh mục Link";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header {
    <link href="~/Public/css/cdn.datatables.net_1.13.6_css_jquery.dataTables.min.css" rel="stylesheet" />
}

@section footer {
    <script src="~/Public/js/cdn.datatables.net_1.13.6_js_jquery.dataTables.min.js"></script>
    <script>let table = new DataTable('#myTable');</script>
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">TẤT CẢ LINK</strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Create","Link")" class="btn-sm btn-success"> <i class="fa fa-plus"></i>Thêm</a>
                        <a href="@Url.Action("Trash","Link")" class="btn-sm btn-danger"> <i class="fa fa-trash"></i>Thùng rác</a>
                        @*@Html.ActionLink("Create New", "Create")*@
                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.Partial("Message")
                <table class="table table-bordered table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th class="text-center" style="width: 20px;"># </th>
                            <th>Slug </th>
                            <th>Table ID</th>
                            <th>Kiểu</th>
                            <th class="text-center" style="width: 180px" ;>Chức năng </th>
                            <th>Id</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><input type="checkbox" name="checkId" value="" /></td>
                                <td>@Html.DisplayFor(modelItem => item.Slug)</td>
                                <td>@Html.DisplayFor(modelItem => item.TableId)</td>
                                <td>@Html.DisplayFor(modelItem => item.Type)</td>
                                <td>
                                    <a href="@Url.Action("Details","Category", new { id = item.Id })" class="btn-sm btn-primary"> <i class="fa fa-eye"></i></a>
                                    <a href="@Url.Action("Edit","Category", new { id = item.Id })" class="btn-sm btn-info"> <i class="fa fa-edit"></i></a>
                                    <a href="@Url.Action("DelTrash","Category", new { id = item.Id })" class="btn-sm btn-danger"> <i class="fa fa-trash"></i></a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->